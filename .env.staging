# Configuración de entorno de staging
NODE_ENV=production
PORT=3000

# Base de datos PostgreSQL
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/freshkeeper_staging?schema=public"

# Base de datos MongoDB (opcional)
MONGODB_URI=mongodb://localhost:27017/freshkeeper_staging

# JWT Secret
JWT_SECRET=staging_jwt_secret_change_in_production

# CORS para staging (agregar dominios específicos de staging)
CORS_ORIGIN=https://staging.freshkeeper.app,http://localhost:5173,https://localhost:5173

# Configuración de email (Mailtrap para testing)
SMTP_HOST=sandbox.smtp.mailtrap.io
SMTP_PORT=2525
SMTP_USER=your_mailtrap_user
SMTP_PASS=your_mailtrap_password

# Configuración de servicios externos (APIs de testing)
OPEN_FOOD_FACTS_API=https://world.openfoodfacts.org
SPOONACULAR_API_KEY=your_spoonacular_test_key

# Logging nivel debug para staging
LOG_LEVEL=debug