# Configuración del servidor
NODE_ENV=development
PORT=3000

# Base de datos MongoDB
MONGODB_URI=mongodb://localhost:27017/freshkeeper
# Para MongoDB Atlas:
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/freshkeeper?retryWrites=true&w=majority

# JWT Secrets
JWT_SECRET=your_super_secret_jwt_key_here_change_in_production
JWT_REFRESH_SECRET=your_super_secret_refresh_key_here_change_in_production
JWT_EXPIRES_IN=7d

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,http://localhost:19006
# Para producción:
# CORS_ORIGIN=https://yourapp.com,https://www.yourapp.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# APIs Externas
# Open Food Facts (principal gratuito, no requiere API key)
OPEN_FOOD_FACTS_BASE_URL=https://world.openfoodfacts.org

# Chomp Food API (secundario comercial para códigos de barras)
CHOMP_API_KEY=your_chomp_api_key

# FatSecret API (opcional, para funcionalidades premium)
FATSECRET_CLIENT_ID=your_fatsecret_client_id
FATSECRET_CLIENT_SECRET=your_fatsecret_client_secret

# Spoonacular API (opcional, para recetas)
SPOONACULAR_API_KEY=your_spoonacular_api_key

# Configuración de logs
LOG_LEVEL=info
LOG_FILE=logs/app.log

# Configuración de email (para notificaciones futuras)
EMAIL_SERVICE=gmail
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_app_password

# Configuración de almacenamiento de imágenes (futuro)
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# Configuración de cache Redis (opcional)
REDIS_URL=redis://localhost:6379

# Configuración de analytics (opcional)
GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX

# Configuración de notificaciones push (futuro)
FCM_SERVER_KEY=your_firebase_server_key

# Configuración de desarrollo
DEBUG=freshkeeper:*