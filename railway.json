{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS"
  },
  "deploy": {
    "startCommand": "prisma generate && prisma migrate deploy && npm start",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  },
  "environments": {
    "production": {
      "deployTriggers": {
        "github": {
          "branches": ["main"]
        }
      }
    },
    "staging": {
      "deployTriggers": {
        "github": {
          "branches": ["develop"]
        }
      }
    }
  }
}