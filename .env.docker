# Variables de entorno para desarrollo con Docker
NODE_ENV=development
PORT=3001

# MongoDB (actual)
MONGODB_URI=mongodb://freshkeeper_app:freshkeeper123@localhost:27017/freshkeeper

# PostgreSQL (para comparación)
POSTGRES_URL=postgresql://freshkeeper:freshkeeper123@localhost:5432/freshkeeper
DATABASE_URL=postgresql://freshkeeper:freshkeeper123@localhost:5432/freshkeeper

# Redis (futuro)
REDIS_URL=redis://:freshkeeper123@localhost:6379

# JWT Secrets
JWT_SECRET=your_super_secret_jwt_key_for_development_only
JWT_REFRESH_SECRET=your_super_secret_refresh_key_for_development_only

# APIs externas (agregar tus claves reales)
OPEN_FOOD_FACTS_API_URL=https://world.openfoodfacts.org/api/v0
FATSECRET_CLIENT_ID=your_fatsecret_client_id
FATSECRET_CLIENT_SECRET=your_fatsecret_client_secret
SPOONACULAR_API_KEY=your_spoonacular_api_key

# Configuración de desarrollo
LOG_LEVEL=debug
ENABLE_CORS=true
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000

# URLs de interfaces de administración
MONGO_EXPRESS_URL=http://localhost:8081
ADMINER_URL=http://localhost:8080